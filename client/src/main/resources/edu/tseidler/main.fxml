<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="edu.tseidler.MainController"
          prefHeight="400.0" prefWidth="600.0">
    <Label fx:id="messageReceived" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <Button fx:id="send" text="send message" onAction="#sendMessage" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <TextField fx:id="messageToSend" GridPane.rowIndex="1" GridPane.columnSpan="2"/>
</GridPane>
